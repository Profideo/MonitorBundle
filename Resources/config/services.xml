<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="check.table_row_count.class">Profideo\MonitorBundle\Check\TableRowCountCollection</parameter>
    </parameters>

    <services>
        <service id="check.table_row_count" public="false" class="%check.table_row_count.class%">
            <argument type="service" id="doctrine" />
            <argument>%check.table_row_count.table_names%</argument>
            <argument>%check.table_row_count.min_row_count%</argument>
            <tag name="liip_monitor.check_collection" alias="table_row_count" />
        </service>
    </services>
</container>
